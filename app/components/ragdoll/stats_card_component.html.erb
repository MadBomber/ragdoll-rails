<div class="card border-<%= color %>">
  <div class="card-body text-center">
    <h5 class="card-title text-<%= color %>">
      <i class="<%= icon %>"></i> <%= title %>
    </h5>
    <h2 class="text-<%= color %>"><%= value %></h2>
    <% if description %>
      <p class="text-muted mb-0"><%= description %></p>
    <% end %>
  </div>
</div>